# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Code files
[*.{js,jsx,ts,tsx,vue}]
indent_size = 4
max_line_length = 100

# HTML related
[*.{html}]
indent_size = 4

[*.{scss}]
indent_size = 4

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 4

# YAML Files
[*.{yml,yaml}]
indent_size = 2
